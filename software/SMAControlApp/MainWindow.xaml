<Window x:Class="SMAControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMAControlApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#F2F5F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#E9EEF2" BorderThickness="0,0,0,2" BorderBrush="#2C3E50">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5"
                          ShadowDepth="1"
                          Opacity="0.2"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <StackPanel.Resources>
                    <Style TargetType="RadioButton">
                        <Setter Property="GroupName" Value="Navbar"/>
                        <Setter Property="Foreground" Value="#2C3E50"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="MainBorder" 
                                            Background="Transparent" 
                                            BorderBrush="Transparent"
                                            BorderThickness="0,0,0,3" 
                                            Padding="{TemplateBinding Padding}"
                                            Margin="5,0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="MainBorder" Property="Background" Value="#E1E8ED"/>
                                        </Trigger>

                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="MainBorder" Property="Background" Value="#D0DBE2"/>
                                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="#2C3E50"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <RadioButton Content="Open Loop" Click="OpenLoop_Click" IsChecked="True"/>
                <RadioButton Content="Closed Loop" Click="ClosedLoop_Click"/>
                <RadioButton Content="Graph Display" Click="Graph_Click"/>
                <RadioButton Content="Configuration" Click="Config_Click"/>
            </StackPanel>
        </Border>
        <ContentControl Grid.Row="1"
                        x:Name="MainContent"/>
    </Grid>
</Window>
