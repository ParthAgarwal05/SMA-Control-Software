<UserControl x:Class="SMAControlApp.Views.ClosedLoopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:viewmodels="clr-namespace:SMAControlApp.ViewModels" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Closed Loop Control"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>
        <!-- Headers -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Sensor"
               FontWeight="Bold"/>

            <TextBlock Grid.Column="1"
               Text="Desired Displacement"
               FontWeight="Bold"/>

            <TextBlock Grid.Column="2"
               Margin="0,0,0,0"
               Text="Operation"
               FontWeight="Bold"/>

            <TextBlock Grid.Column="3"
               Text="Actual Displacement"
               FontWeight="Bold"/>
        </Grid>
        <!-- Table -->
        <ScrollViewer Grid.Row="2" Grid.Column="0">
            <ItemsControl ItemsSource="{Binding Channels}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding ChannelId}"
                                   VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                                 Height="25"
                                 Text="{Binding DesiredDisplacement}"/>

                            <ToggleButton Grid.Column="2"
                                      Height="25"
                                      Margin="10,0,0,0"
                                      IsChecked="{Binding IsRunning}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="border"
                                Background="#4CAF50"
                                CornerRadius="4"
                                Padding="5">
                                                        <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                                                    </Border>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="border"
                                        Property="Background"
                                        Value="#E74C3C"/>
                                                            <Setter Property="Content"
                                        Value="Stop"/>
                                                        </Trigger>

                                                        <Trigger Property="IsChecked" Value="False">
                                                            <Setter Property="Content"
                                        Value="Start"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>


                            <TextBlock Grid.Column="3"
                                   Margin="10,0,0,0"
                                   Text="{Binding CurrentDisplacement}"
                                   VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>
        <!-- Global Controls -->
        <Border Grid.Column="1"
        Grid.RowSpan="3"
        Background="#E9EEF2"
        Padding="15"
        Margin="15,0,0,0">

            <StackPanel>

                <TextBlock Text="Global Control"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

                <TextBlock Text="Set displacement for all:"
                   Margin="0,0,0,5"/>

                <TextBox x:Name="GlobalDisplacementBox"
                 Height="25"
                 Text="{Binding GlobalDisplacement}"
                 Margin="0,0,0,10"/>

                <Button Content="Apply to All"
                Height="30"
                Click="ApplyAll_Click"
                Margin="0,0,0,20"/>

                <Separator Margin="0,10"/>

                <ToggleButton Height="40"
              IsChecked="{Binding IsAllRunning, UpdateSourceTrigger=PropertyChanged}">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border"
                                Background="#4CAF50"
                                CornerRadius="4"
                                Padding="8">
                                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#E74C3C"/>
                                                <Setter Property="Content"
                                        Value="Stop All"/>
                                            </Trigger>

                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter Property="Content"
                                        Value="Start All"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
